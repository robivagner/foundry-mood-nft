pragma solidity ^0.8.20;

import {Test, console2} from "forge-std/Test.sol";
import {MintMoodNft} from "../../script/Interactions.s.sol";
import {DeployMoodNft} from "../../script/DeployMoodNft.s.sol";
import {MoodNft} from "../../src/MoodNft.sol";

contract InteractionsMoodNftTest is Test {
    MoodNft moodNft;
    MintMoodNft mintMoodNft;

    string public constant HAPPY_TOKEN_URI =
        "data:application/json;base64,";

    function setUp() public {
        DeployMoodNft deployer = new DeployMoodNft();
        moodNft = deployer.run();

        mintMoodNft = new MintMoodNft();
    }

    function testMintMoodNft() public {
        mintMoodNft.mintNftOnConcract(address(moodNft));

        assertEq(
            keccak256(abi.encodePacked(moodNft.tokenURI(0))),
            keccak256(abi.encodePacked(HAPPY_TOKEN_URI))
        );
    }
}
